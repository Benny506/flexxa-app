{
  "expo": {
    "name": "flexxa",
    "slug": "flexxa",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "flexxa",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Flexxa needs access to your photos to let you upload profile pictures.",
        "NSCameraUsageDescription": "Flexxa needs access to your camera to let you take profile pictures.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.flexxapp"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.flexxapp"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Lato-Bold.ttf",
            "./assets/fonts/Lato-Light.ttf",
            "./assets/fonts/Lato-Regular.ttf",
            "./assets/fonts/Lato-Thin.ttf"
          ]
        }
      ],      
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Flexxa needs access to your photos to let you upload profile pictures.",
          "cameraPermission": "Flexxa needs access to your camera to let you take profile pictures."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Flexxa to access your camera",
          "microphonePermission": "Allow Flexxa to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      "expo-secure-store",
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "66a123d8-8f37-48bb-933f-af892346c57c"
      }
    }
  }
}
